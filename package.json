{
  "name": "middledrive",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/app.js",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-node6": "^0.4.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "electron": "^1.7.9",
    "electron-packager": "^10.1.0",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-simple-vars": "^4.1.0",
    "pug-cli": "^1.0.0-alpha6",
    "serialport": "^6.0.4",
    "webpack": "^3.9.1"
  },
  "scripts": {
    "build": "babel src -d dist && run-p build:*",
    "build:js": "webpack",
    "build:pug": "pug src/electron/pug/index.pug -o public/ -P",
    "build:postcss": "postcss src/electron/postcss/*.css -d public/ --no-map -u postcss-simple-vars postcss-cssnext",
    "postbuild": "npm run start",
    "start": "electron .",
    "watch": "run-p watch:*",
    "watch:js": "npm run build:js -- -w",
    "watch:pug": "npm run build:pug -- -w",
    "watch:postcss": "npm run build:postcss -- -w",
    "clean": "rm -rf dist",
    "electron:prod": "npm run electron:production && npm run electron:exec",
    "electron:production": "electron-packager . MiddleDrive --platform=win32 --arch=x64 --overwrite",
    "electron:exec": "start MiddleDrive-win32-x64/MiddleDrive.exe"
  },
  "author": "MLOA",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MLOA/MiddleDrive.git"
  }
}
